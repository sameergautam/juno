    "hapi": "^17.7.0",
    "html-webpack-plugin": "2.29.0",
    "jest": "20.0.4",
    "lodash": "^4.17.11",
    "node-fetch": "^2.3.0",
    "node-sass": "^4.9.4",
    "node-sass-chokidar": "^1.3.4",
    "nprogress": "^0.2.0",
    "object-assign": "4.1.1",
