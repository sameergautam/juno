    "react-dom": "^16.6.0",
    "react-redux": "^5.1.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.0.5",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "request-promise": "^4.2.2",
    "resolve": "1.6.0",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.1",
